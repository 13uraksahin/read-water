# =============================================================================
# Read Water - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# NEVER commit the .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=ReadWater
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# PostgreSQL / TimescaleDB
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=readwater
POSTGRES_PASSWORD=readwater_secret
POSTGRES_DB=readwater

# Prisma Database URL (constructed from above variables)
DATABASE_URL=postgresql://readwater:readwater_secret@localhost:5433/readwater?schema=public

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6380

# Redis Insight (Development GUI)
REDIS_INSIGHT_PORT=5540

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=4000
API_PREFIX=api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Socket.IO
# -----------------------------------------------------------------------------
SOCKET_PORT=4001

# -----------------------------------------------------------------------------
# BullMQ Queue Configuration
# -----------------------------------------------------------------------------
QUEUE_READINGS_CONCURRENCY=10
QUEUE_READINGS_MAX_JOBS=10000

# -----------------------------------------------------------------------------
# Integrations
# -----------------------------------------------------------------------------
# HTTP Callback URL for external integrations
HTTP_CALLBACK_URL=

# MQTT Configuration
MQTT_URL=
MQTT_USERNAME=
MQTT_PASSWORD=

# -----------------------------------------------------------------------------
# White Labeling (Optional)
# -----------------------------------------------------------------------------
WHITE_LABEL_NAME=Read Water
WHITE_LABEL_TITLE=Remote Water Meter Reading Platform
WHITE_LABEL_DESCRIPTION=High-performance, multi-tenant water meter reading platform
WHITE_LABEL_LOGO_URL=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
